{% extends "page-template.njk" %}
{% from "hero/_macro.njk" import hero %}
{% from "header-site/_macro.njk" import headerSite %}
{% from "modal/_macro.njk" import modal %}
{% from "button/_macro.njk" import button %}


{% block content %}
<div class="wsu-wrapper-global">
	  {{ modal( ' wsu-modal--small wsu-modal--centered', 'modal-small', 'This is a Small Modal', 'Here is a typical warning or alert message we need you to acknolwedge.', 'Sounds Good', false ) }}
    {{ modal( ' wsu-modal--medium wsu-modal--centered', 'modal-medium', 'This is a Medium Modal', '', 'This is cool', false, true ) }}
    {{ modal( ' wsu-modal--large wsu-modal--columns', 'modal-large', 'This is a Large Modal', ' ', '', false, false, true ) }}
    {{ modal( ' wsu-modal--full', 'modal-full', 'This is a Full Modal with a Form', 'Tell us more about yourself and sign up to get updates from us!', '', true ) }}

    {% include 'skip-to-main/html.njk' %}
    {% include 'header-global/html.njk' %}
    {% include 'navigation-site-vertical/html.njk' %}
    <div class="wsu-wrapper-site">
        {{ headerSite('','Civil and Environmental Engineering','Voiland College of Engineering and Architecture', true ) }}
        <div class="wsu-wrapper-content">
            <main role="main" id="wsu-content" class="wsu-wrapper-main" tabindex="-1">
                {{ hero() }}
                <h1>Lorem ipsum dolor sit amet</h1>
                {% include 'row/html--thirds.njk' %}
                <div>
                  {{ button( '', title='Small modal example', id='modal-small' ) }}
                  {{ button( '', title='Medium modal example', id='modal-medium' ) }}
                </div>
                <hr />
                <div>
                  <h2>Section 2</h2>
                  {% include 'row/html--halves.njk' %}
                  <div>
                    {{ button( '', title='Large modal example', id='modal-large' ) }}
                    {{ button( '', title='Click me for a full modal', id='modal-full' ) }}
                  </div>
                </div>
            </main>
        </div>
        {% include 'footer-site/html.njk' %}
    </div>
    {% include 'footer-global/html.njk' %}
</div>
{%  endblock %}
