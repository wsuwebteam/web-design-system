{% macro sliderFrame(classes = '', delay = 3000, numberOfSlides = 5, effect = 'slide') %}
    <div class="wsu-slider-frame swiper swiper-no-swiping {{ classes }}" 
        data-delay="{{delay}}"          
        data-effect="{{effect}}">
        <div class="swiper-wrapper">
            {% for i in range(0, numberOfSlides) %}
                <div class="swiper-slide">
                    <img src="https://picsum.photos/600/400?random={{i}}" class="wsu-slider-frame__image"/>
                </div>
            {% endfor %}
        </div>
        <button class="wsu-button-pause-background wsu-slider-frame__pause-button" aria-label="Pause Animation"></button>
    </div>
{% endmacro %}