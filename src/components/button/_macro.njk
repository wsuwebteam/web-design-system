{% macro button( classes, title='Lorem ipsum', id ) %}
{% if id %}
<button class="wsu-button{{ classes }}" data-open="{{ id }}">
    {{ title }}
</button>
{% else %}
<button class="wsu-button{{ classes }}">
    {{ title }}
</button>
{% endif %}
{% endmacro %}

{% macro buttonPlay( classes='', title='Play Video' ) %}
<button class="wsu-button-play{{ classes }}">
    {{ title }}
</button>
{% endmacro %}

{% macro buttonPauseBackground( classes='', title='Pause Background' ) %}
<button class="wsu-button-pause-background{{ classes }}" aria-label="Pause Animation"></button>
{% endmacro %}
