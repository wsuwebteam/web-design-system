{% macro button( classes, title='Lorem ipsum', tag='button' ) %}
<{{ tag }} class="wsu-button{{ classes }}">
    {{ title }}
</{{ tag }}>
{% endmacro %}

{% macro buttonPlay( classes='', title='Play Video' ) %}
