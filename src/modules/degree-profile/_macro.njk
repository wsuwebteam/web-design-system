{% from "image-frame/_macro.njk" import imageFrame %}
{% from "marker/_macro.njk" import marker %}
{% from "heading/_macro.njk" import heading %}
{% from "button/_macro.njk" import button %}
{% from "accordion/_macro.njk" import accordion %}


{% macro degreeProfile( bodyClasses, degreeTitle="Agricultural Technology and Production Management", degreeContactUrl="rep.wsu.edu", degreeContactEmail="future.coug@wsu.edu", degreeContactPhone="888-468-6978", degreeContactVanityPhone="888-GO-TO-WSU", degreeOptions=["Bachelor", "Master", "Doctorate"], campuses=["WSU Pullman", "WSU Vancouver", "WSU Tri-Cities"], degreeTypes=["Bachelor", "Master", "Doctoral"] ) %}
    <div class="wsu-degree-profile {{bodyClasses}}">
        <div class="wsu-degree-profile__hero">
            <div class="wsu-degree-profile__hero-left">
                <div class="wsu-degree-profile__title">
                    {{heading(tag='h1', title=degreeTitle )}}
                </div>
                <div class="wsu-degree-profile__colleges">
                    <p class="wsu-degree-profile__college">College of Agriculture, Human, and Natural Resource Sciences</p>
                    <p class="wsu-degree-profile__department">Agricultural and Food Systems Program</p>
                </div>
                <div class="wsu-degree-profile__colleges">
                    <p class="wsu-degree-profile__college">College of Agriculture, Human, and Natural Resource Sciences</p>
                    <p class="wsu-degree-profile__department">Agricultural and Food Systems Program</p>
                </div>
                <div class="wsu-degree-profile__short-desc">
                    <p>From precision agricultural operations and services to management of agricultural business and production operations, you’ll be ready to own, operate, and manage your own business.</p>
                </div>
                <div class="wsu-degree-profile__degree-tags">
                    <p class="wsu-degree-profile__degree-tags-label">Campuses:</p>
                    <ul class="wsu-marker__group">
                        {% for campus in campuses %}
                            {{marker(color='vineyard', tag="li", text=campus)}}
                        {% endfor %}
                    </ul>
                    <p class="wsu-degree-profile__degree-tags-label">Degree Types:</p>
                    <ul class="wsu-marker__group">
                        {% for degree in degreeTypes %}
                            {{marker(color='pacificsky', tag="li", text=degree)}}
                        {% endfor %}
                    </ul>
                </div>
            </div>
            <div class="wsu-degree-profile__hero-right">
                <div class="wsu-degree-profile__hero-image">
                {{ imageFrame(' wsu-image-frame--large wsu-ratio--square', imageSrc="https://wpcdn.web.wsu.edu/ucomm/uploads/sites/2814/118326292_3587265347972711_1850701655313517960_n.jpg" ) }} 
                </div>
                <div class="wsu-degree-profile__hero-cta-wrapper">
                    {{ button( classes = ' wsu-degree-profile__hero-cta wsu-degree-profile__hero-cta-rfi', tag='a', title="Request Information") }}
                    {{ button( classes = ' wsu-degree-profile__hero-cta wsu-degree-profile__hero-cta-apply', tag='a', title="Apply") }}
                    {{ button( classes = ' wsu-degree-profile__hero-cta wsu-degree-profile__hero-cta-visit', tag='a', title="Visit") }}
                </div>
            </div>
        </div>
        <hr>
        <div class="wsu-degree-profile__content">
            <div class="wsu-degree-profile__content-left">
                <div class="wsu-degree-profile__dig-deeper wsu-notch--small">
                    <div class="wsu-degree-profile__dig-deeper-left">
                        <svg width="94" height="88" viewBox="0 0 94 88" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M91.728 74L91.7088 2.00901L14.9723 2" stroke="white" stroke-width="4" stroke-linecap="round" stroke-linejoin="round"/>
                            <path d="M2.17969 86L91.728 2" stroke="white" stroke-width="4" stroke-linecap="round" stroke-linejoin="round"/>
                        </svg>
                    </div>
                    <div class="wsu-degree-profile__dig-deeper-right ">
                        <p><b>Dig Deeper</b><br>
                        Find out more about a degree in Agricultural Technology and Production Management</p>
                        {{ button( classes = ' ', tag='a', title="Let's Go") }}
                    </div>
                </div>
                <h2>Highlights</h2>
                <ul>
                    <li>Greenhouses, farms, research centers and other facilities available on campus and throughout the state</li>
                    <li>Participate in undergraduate research guided by renowned faculty</li>
                    <li>Blend of classroom instruction and hands-on field experience</li>
                    <li>Join a math, science, and engineering residence hall, where you can study with your neighbors, get free tutoring, and use the hall’s computer lab</li>
                </ul>
                <h2>Career</h2>
                <p>With an Agricultural Technology and Production degree, you can work in:</p>
                <ul>
                    <li>Management of farms, feedlots, and nurseries</li>
                    <li>Plant and animal breeding</li>
                    <li>Consulting</li>
                    <li>Food quality assurance</li>
                </ul>
