                    <li>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Donec commodo urna sit amet erat dictum dapibus.</li>
                </ul>
                <h2>Transfer Students</h2>
                <ul>
                    <li>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Donec commodo urna sit amet erat dictum dapibus.</li>
                    <li>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Donec commodo urna sit amet erat dictum dapibus.</li>
                </ul>
            </div>
            <div class="wsu-degree-profile__content-right">
                <div class="wsu-degree-profile__degree-details">
                    <div class="wsu-degree-profile__degree-details-header">
                        <h2>Degree Options</h2>
                        <div class="wsu-decorator--style-lines-gray" style="width: 25%;height: 106%;top: 0;right: 0; background-image: repeating-linear-gradient(135deg,#ffffff,#ffffff 2px,transparent 2px,transparent 10px)"></div>
                    </div>
                    <div class="wsu-degree-profile__degree-details-body">
                        {% for degreeOpt in degreeOptions %}
                            <div class="wsu-accordion wsu-accordion--small">
                            <h3 id="unique-id-1__title" class="wsu-accordion__title">
                                <button  class="wsu-accordion__title-button wsu-accordion--toggle" aria-expanded="false" aria-controls="unique-id-1__content">{{degreeOpt}}</button>
                            </h3>
                            <div id="unique-id-1__content" class="wsu-accordion__content" aria-labelledby="unique-id-1__title">
                                <div class="wsu-accordion__content-inner">
                                    <h4>Communication</h4>
                                    <ul class="wsu-marker__group">
                                        {% for campus in campuses %}
                                            {{marker(color='vineyard', tag="li", text=campus)}}
                                        {% endfor %}
                                    </ul>
                                    <h4>Strategic Communication</h4>
                                    <ul class="wsu-marker__group">
                                        {% for campus in campuses %}
                                            {{marker(color='vineyard', tag="li", text=campus)}}
                                        {% endfor %}
                                    </ul>
                                </div>
                            </div>
                        </div>
                        {% endfor %}
                    </div>
                </div>
                <div class="wsu-degree-profile__degree-details">
                    <div class="wsu-degree-profile__degree-details-header">
                        <h2>Degree Contact</h2>
                        <div class="wsu-decorator--style-lines-gray" style="width: 25%;height: 106%;top: 0;right: 0; background-image: repeating-linear-gradient(135deg,#ffffff,#ffffff 2px,transparent 2px,transparent 10px)"></div>
                    </div>
                    <div class="wsu-degree-profile__degree-details-body">
                        <p>Contact your personal admission counselor</p>
                        <ul>
                            <li class="wsu-degree-profile__contact-url"><a href="https://{{degreeContactUrl}}">{{degreeContactUrl}}</a></li>
                            <li class="wsu-degree-profile__contact-email"><a href="mailto:{{degreeContactEmail}}">{{degreeContactEmail}}</a></li>
                            <li class="wsu-degree-profile__contact-phone"><a href="tel:{{degreeContactPhone}}">{{degreeContactVanityPhone}}<br>({{degreeContactPhone}})<a href="mailto:{{degreeContactEmail}}"></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endmacro %}