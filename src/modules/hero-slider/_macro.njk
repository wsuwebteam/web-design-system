{% from "hero/_macro.njk" import hero %}


{% macro heroSlider( slides='', classes='' ) %}
{% if slides == 1 %}
<div class="wsu-hero-slider wsu-hero-slider--single wsu-width--full{{ classes }}">
		{{ hero('') }}
</div>
{% else %}
<div class="wsu-hero-slider wsu-width--full{{ classes }} swiper">
  <div class="wsu-hero-slider__wrapper swiper-wrapper">
    {% for i in range(0, slides) %}
			{{ hero(' wsu-hero-slider__slide swiper-slide') }}
    {% endfor %}
  </div>
	<!--<div class="swiper-scrollbar"></div>-->
  <div class="swiper-pagination"></div>
</div>
{% endif %}
{% endmacro %}

