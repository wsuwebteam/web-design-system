{% from "overlap/_macro.njk" import overlap %}
{% block styles %}
    <style>
    .wsu-overlap {
        margin: 25px 0;
    }
    .wsu-overlap__container{
        max-width: 900px;
        height: 450px;
    }
    .wsu-overlap__column{
        border: 1px solid #000;
    }
    .wsu-overlap__column:first-child .wsu-overlap__column-inner {
        background-color: rgba(0, 0, 255,0.3);
    }
    .wsu-overlap__column:last-child .wsu-overlap__column-inner {
        background-color: rgba(60, 179, 113,0.3);
    }
    </style>
{% endblock %}
