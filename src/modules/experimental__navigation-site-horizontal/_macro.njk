{% from "menu/_macro.njk" import menu %}

{% macro navigationSiteVertical(bodyClasses, startOpen=true) %}
<nav class="wsu-navigation-site-vertical{{ bodyClasses }}" aria-expanded="{{ startOpen }}" aria-haspopup="true">
    <button class="wsu-navigation-site-vertical__toggle-button wsu-navigation-site-vertical--toggle" aria-label="Open Site Navigation">Menu</button>
    <button class="wsu-navigation-site-vertical__open-button wsu-navigation-site-vertical--open" aria-label="Open Site Navigation">Menu</button>
    <div class="wsu-navigation-site-vertical__panel">
        <button class="wsu-button-ui-close wsu-navigation-site-vertical--close" aria-label="Close Site Navigation">Close</button>
        {{ menu() }} 
        <button class="wsu-button-ui-close wsu-navigation-site-vertical--close" aria-label="Close Site Navigation">Close</button>
    </div>
</nav>
{% endmacro %} 